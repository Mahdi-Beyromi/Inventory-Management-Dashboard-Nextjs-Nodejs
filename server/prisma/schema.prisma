generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  userId String @id
  name   String
  email  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Products {
  productId     String      @id
  name          String
  price         Float
  rating        Float?
  stockQuantity Int
  category      String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  orders        Order[]     // Relation to orders
}

model Order {
  orderId     String   @id @default(uuid())
  productId   String
  quantity    Int
  totalPrice  Float
  createdAt   DateTime @default(now())
  product     Products @relation(fields: [productId], references: [productId])
}